<Window x:Class="AtlasPadder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AtlasPadder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>

        <StackPanel Orientation="Horizontal" Background="LightBlue" Height="48" Margin="0,-380,0,0">
            <Label Margin="10,0,0,0" Height="23" Name="Label1">
                Current File:
            </Label>
            <Label Margin="5,0,0,0" Height="25" Name="FileNameLabel" Width="300" />
            <Button Margin="5,0,0,0" Height="23" Name="BrowseButton" Width="75" Click="BrowseButton_Click">
                Browse
            </Button>

        </StackPanel>
        <StackPanel>
            <Image Name="ImageViewer1" Height="251" Width="313" Margin="0,80,0,0"/>
        </StackPanel>
        <Button Name="Process" IsEnabled="False" Click="ProcessButton_Click"  Content="Add Padding" HorizontalAlignment="Center" Margin="0,343,0,0" VerticalAlignment="Top" Height="62" Width="160"/>
    </Grid>

</Window>
